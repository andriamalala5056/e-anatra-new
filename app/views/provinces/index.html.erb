<p id="notice"><%= notice %></p>

<h1>Provinces</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @provinces.each do |province| %>
      <tr>
        <td><%= province.nom %></td>
        <td><%= link_to 'Show', province %></td>
        <% if user_signed_in? %>
          <% if current_user.role == "admin" %> 
            <td><%= link_to 'Edit', edit_province_path(province) %></td>
            <td><%= link_to 'Destroy', province, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <% if current_user.role == "admin" %>
    <%= link_to 'New Province', new_province_path %>
  <% end %>
<% end  %>