<h1>Filieres#index</h1>
<table>
    <thead>
        <th>FILIERES</th>
        <th>DESCRIPTIONS</th>
        <th>DATE CREATION</th>
        <th></th>
        <th></th>
    </thead>
<% @filieres.each do |f| %>
    <tr>
        <td><%= f.nom %></td>
        <td><%= f.description %></td>
        <td><%= Date.parse(f.created_at.to_s).strftime('%a %d %b %Y') %></td> 
        <td><%= link_to "Modifier", edit_filiere_path(f.id), class: "btn btn-info" %></td>
        <td>
            <a href="<%= filiere_path(f.id) %>" class="btn btn-danger" data-confirm="Êtes vous sur ?" data-method="DELETE">Supprimer</a>
        </td>
    </tr>
<% end %>
</table>
<h2>
    <a href="<%= new_filiere_path %>">Créer new filières</a>
</h2>
<h2>
    <a href="<%= associate_filiere_etabs_path %>">Voir tous les filières de votre établissement</a>
</h2>
