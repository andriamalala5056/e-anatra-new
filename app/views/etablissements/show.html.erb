<script type="text/javascript">
$(function(){
    // On va remplacer dynamiquement la latitude et longitude
    var latlng = new google.maps.LatLng('<%= @etablissement.latitude %>', '<%= @etablissement.longitude %>')

    var map = new google.maps.Map(document.getElementById('map'),{
        zoom : 18,
        center: latlng,
        mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    // Initialisation du marker
    var marker = new google.maps.Marker({
        position : latlng,
        map : map,
        title : 'Bougez ce curseur',
        draggable : false
    });

    // Initialisation du geocoder
    var geocoder = new google.maps.Geocoder();

    google.maps.event.addListener(marker, 'drag', function(){
        setPosition(marker);
    });

    $('#adresse').keypress(function(e){
        if(e.keyCode == 13){
            var request = {
                address : $(this).val()
            }
            geocoder.geocode(request, function(results, status){
                if(status == google.maps.GeocoderStatus.OK){
                    map.setCenter(results[0].geometry.location);
                }
            });
            return false;
        }
    });

});

function setPosition(marker){
    var pos = marker.getPosition();
    $('#lat').val(pos.lat());
    $('#lng').val(pos.lng());
};
</script>