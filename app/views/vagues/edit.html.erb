<h1>Editing Vague</h1>

<div class="container">
    <%= form_for @vague  do |f| %>

        <div class="form-group">
            <label for="date">Rentree</label>
            <%= f.date_field :rentree %>
        </div>

        <div class="form-group">
            <label for="etabmissement">Etablissement</label>
            <%= f.collection_select :etablissement_id, Etablissement.order(:nom), :id, :nom, include_blank: true, class: "form-control" %>
        </div>

        <%= f.submit "Editer", class: "btn btn-primary" %>
        <%= link_to 'Back', vagues_path, class: "btn btn-secondary" %>
    <% end %>
</div>
